<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaApplication1.Views.SecondWindow"
        Title="Панель управления" 
        Width="400" Height="400"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
        <TextBlock x:Name="WelcomeText" Text="Добро пожаловать!" FontSize="18" FontWeight="Bold" Foreground="#4A56E2" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="350"/>
        
        <Button Content="✨ Сделать магию" Click="MagicButton_Click" 
                HorizontalAlignment="Stretch" Height="50" CornerRadius="10"
                Background="#4A56E2" Foreground="White" FontWeight="Bold">
        </Button>

        <Button Content="Выйти" Click="Logout_Click" 
                HorizontalAlignment="Center" Width="100" Height="40" CornerRadius="5"
                Background="#F4F4F4" Foreground="#666666"/>
    </StackPanel>
</Window>
